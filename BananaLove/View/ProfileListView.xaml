<UserControl x:Class="BananaLove.View.ProfileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl x:Name="itemsControlProfiles">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="10"
                            Width="250"
                            Height="350"
                            Margin="10"
                            Padding="15"
                            Cursor="Hand"
                            MouseLeftButtonDown="ProfileCard_MouseLeftButtonDown">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <!-- Profile Picture -->
                            <Border Background="#E0E0E0"
                                    CornerRadius="5"
                                    Width="220"
                                    Height="220"
                                    Margin="0,0,0,15"
                                    HorizontalAlignment="Center">
                                <Image x:Name="imgProfile"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Width="200"
                                       Height="200">
                                    <Image.Source>
                                        <BitmapImage UriSource="{Binding ImagePath}"/>
                                    </Image.Source>
                                </Image>
                            </Border>
                            
                            <!-- Name -->
                            <TextBlock x:Name="txtName"
                                       Text="{Binding Name}"
                                       Foreground="Black"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       FontFamily="Montserrat"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Username -->
                            <TextBlock x:Name="txtUsername"
                                       Text="{Binding Username}"
                                       Foreground="DarkGray"
                                       FontSize="14"
                                       FontFamily="Montserrat"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <!-- Bio Preview -->
                            <TextBlock x:Name="txtBio"
                                       Text="{Binding Bio}"
                                       Foreground="Black"
                                       FontSize="12"
                                       FontFamily="Montserrat"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"
                                       MaxHeight="60"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>

