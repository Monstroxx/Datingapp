<UserControl x:Class="BananaLove.View.FypView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Info -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="10,0,10,5"
                    HorizontalAlignment="Center">
            <TextBlock Text="Für dich"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>
            <TextBlock x:Name="txtIndexInfo"
                       FontSize="14"
                       Foreground="DarkGray"/>
        </StackPanel>

        <!-- Single Profile Card -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Width="350"
                Height="480"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                Focusable="False">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="15" ShadowDepth="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Bild -->
                <Border Grid.Row="0"
                        Background="#E0E0E0"
                        CornerRadius="8"
                        Width="300"
                        Height="260"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                    <Image x:Name="imgProfile"
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <!-- Text-Infos -->
                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <!-- Name -->
                    <TextBlock x:Name="txtName"
                               Foreground="Black"
                               FontSize="22"
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>

                    <!-- Username + Gender -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,8">
                        <TextBlock x:Name="txtUsername"
                                   Foreground="DarkGray"
                                   FontSize="14"
                                   FontFamily="Montserrat"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="•"
                                   Foreground="DarkGray"
                                   FontSize="14"
                                   Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtGender"
                                   Foreground="DarkGray"
                                   FontSize="14"
                                   FontFamily="Montserrat"/>
                    </StackPanel>

                    <!-- Bio -->
                    <TextBlock x:Name="txtBio"
                               Foreground="Black"
                               FontSize="13"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextTrimming="CharacterEllipsis"
                               MaxHeight="80"
                               TextAlignment="Center"
                               Margin="10,0,10,8"/>

                    <!-- Distanz -->
                    <TextBlock x:Name="txtDistance"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Hinweis für Steuerung -->
                <TextBlock Grid.Row="2"
                           Text="← / → für vorherigen / nächsten"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           FontSize="12"
                           Foreground="DarkGray"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>


